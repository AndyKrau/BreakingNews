@using DBConnection.Models.Classes;
@model IEnumerable<User>

@{
    ViewBag.PageInfo = "Users list:";
}

<div class="row">
    <div class="col-md-2">
        <form class="d-grid gap-2 col-12 mx-right">
            <button class="btn btn-light" asp-controller="Users" asp-action="Users">Back</button>
        </form>
    </div>

    <div class="col-md-8 offset-md-1">
        <table class="table table-striped table-hover">
            <tr><th>Email</th><th></th></tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Edit rights</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>


