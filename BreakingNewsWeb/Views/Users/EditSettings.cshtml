@using DBConnection.Models.Classes;
@model ChangeApiDataViewModel;

@{
    ViewBag.PageInfo = "API-connection setting:";
}

<div class="row">
    <div class="col-md-2">
        <form class="d-grid gap-2 col-12 mx-right">
            <button class="btn btn-light" asp-controller="Users" asp-action="Card">Back</button>
        </form>
    </div>

     <div class="col-md-9 offset-md-1">
        <div class="row"> 
             <div class="col-md-6">
                 <form asp-controller="Users" asp-action="EditSettings">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ApiKey" class="control-label">API key</label>
                        <input type="text" asp-for="ApiKey" value="@Model.ApiKey" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Url" class="control-label">Url</label>
                        <input type="text" asp-for="Url" value="@Model.Url"class="form-control" />
                    </div>
                   @* <div class="form-group">
                        <label asp-for="CountryName" class="control-label">Country</label>
                        <input type="text" asp-for="CountryName" value="@Model.CountryName" class="form-control" />
                    </div>*@
                    <div class="form-group">
                        <label asp-for="CountryName" class="control-label">Country</label>
                        <select asp-for="CountryName" class="form-select">
                            @foreach (var item in ViewBag.Countries)
                            {
                                <option asp-for="CountryName" value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-secondary mt-4" />
                    </div>
                </form>
             </div>
        </div>
    </div>
</div>