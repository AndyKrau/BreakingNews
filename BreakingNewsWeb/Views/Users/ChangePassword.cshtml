@using BreakingNewsWeb.Models.ViewModels;
@model ChangePasswordViewModel;

@{
    ViewBag.PageInfo = "Изменение пароля";
}

<div class="row">
    <div class="col-md-2">
        <form class="d-grid gap-2 col-12 mx-right">
            <button class="btn btn-light" asp-controller="Users" asp-action="Users">Back</button>
        </form>
    </div>

    <div class="col-md-4 offset-md-1">
        <form asp-action="ChangePassword" asp-controller="Users">
            <div asp-validation-summary="All" class="text-danger"></div>
 
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Email" />
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label">Old password</label>
                <input type="text" asp-for="OldPassword" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">New password</label>
                <input type="text" asp-for="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-secondary mt-4" />
            </div>
        </form>
    </div>
</div>

