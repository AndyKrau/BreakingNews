@using DBConnection.Models.Classes;
@model ChangeApiDataViewModel;

@{
    ViewBag.PageInfo = "API-connection setting:";
}

<div class="row">
    <div class="col-md-2">
        <form class="d-grid gap-2 col-12 mx-right">
            <button class="btn btn-light" asp-controller="Users" asp-action="EditSettings">Edit</button>
            <button class="btn btn-light" asp-controller="Users" asp-action="Card">Back</button>
        </form>
    </div>

     <div class="col-md-9 offset-md-1">
        <div class="row"> 
             <div class="col-md-6">
                 <ol class="list-group list-group-numbered">
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">API key</div>
                        @Model.ApiKey
                    </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">Url</div>
                       @Model.Url
                    </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="ms-2 me-auto">
                        <div class="fw-bold">Country</div>
                        @Model.CountryName
                    </div>
                    </li>
                </ol>
             </div>
        </div>
    </div>
</div>