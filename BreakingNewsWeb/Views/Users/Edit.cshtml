@model EditUserViewModel;

@{
    ViewBag.PageInfo = "Edit user:";
}

<div class="row">
    <div class="col-md-2">
        <form class="d-grid gap-2 col-12 mx-right">
            <button class="btn btn-light" asp-controller="Users" asp-action="Users">Back</button>
        </form>
    </div>

     <div class="col-md-9 offset-md-1">
        <div class="row"> 
             <div class="col-md-3 mb-3">
                <img src="~/img/unknown-user.jpg" class="img-thumbnail" alt="img-thumbnail">
                <label for="formFile" class="form-label mt-3">Download photo</label>
                <input class="form-control" type="file" id="formFile">
             </div>
             <div class="col-md-6">
                 <form asp-controller="Users" asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Phone number</label>
                        <input type="text" asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PostalCode" class="control-label">Postal code</label>
                        <input type="text" asp-for="PostalCode" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Country" class="control-label">Country</label>
                        <input type="text" asp-for="Country" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label">City</label>
                        <input type="text" asp-for="City" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label">Birthday date</label>
                        <input type="text" asp-for="DateOfBirth" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-secondary mt-4" />
                    </div>
                </form>
             </div>
        </div>
    </div>
</div>

