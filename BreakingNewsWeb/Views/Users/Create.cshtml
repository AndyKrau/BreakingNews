@using BreakingNewsWeb.Models.ViewModels;
@model CreateUserViewModel;

@{
    ViewBag.PageInfo = "Add user:";
}

<div class="row">
    <div class="col-md-2">
        <form class="d-grid gap-2 col-12 mx-right">
            <button class="btn btn-light" asp-controller="Users" asp-action="Users">Back</button>
        </form>
    </div>

    <div class="col-md-4 offset-md-1">
        <form method="post" asp-controller="Users" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Пароль</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-secondary mt-4" />
            </div>
        </form>
    </div>
</div>




