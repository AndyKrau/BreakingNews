@using BreakingNewsWeb.Models;
@model LoginViewModel;

@{
    ViewBag.PageInfo = $"Login:";
}

<div class="row">
   <div class="col-md-4 offset-md-4">
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email" class="form-label mt-2"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password" class="form-label mt-2"></label>
                <input asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <input asp-for="RememberMe"/>
                <label asp-for="RememberMe" class="form-label mt-2"></label>
            </div>
            <div>
                <input class="btn btn-primary mt-3" type="submit" value="Enter" />
            </div>
        </form>
        <a class="btn btn-primary mt-3" asp-controller="Account" asp-action="Register">Register</a>
   </div>
</div>