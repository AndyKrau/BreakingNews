@using BreakingNewsWeb.Models;
@model RegisterViewModel;

@{
    ViewBag.PageInfo = $"Register new user:";
}

<div class="row">
   <div class="col-md-4 offset-md-4">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email" class="form-label mt-2"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password" class="form-label mt-2"></label>
                <input asp-for="Password"  class="form-control"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm" class="form-label mt-2"></label><br />
                <input asp-for="PasswordConfirm" class="form-control"/>
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <input class="btn btn-primary mt-3" type="submit" value="Register" />
            </div>
        </form>
   </div>
</div>