<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Breaking News - Новости сегодня</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous" asp-append-version="true">
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true">
        <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
        <script defer src="~/js/userinfo-modal.js"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
       
    </head>
    <body>
        <container class="d-flex flex-column min-vh-100">
            <header class="header">
                <div class="header__img">
                   <img class="header__img-logo" src="/img/breakingnews.png" />
                </div>
                <div class="header__nav">
                    <ul class="header__nav-ul">
                        <li class="header__nav-li">
                            <a class="header__nav-links" asp-controller="Home" asp-action="Index">News</a>
                        </li>
                        <li class="header__nav-li">
                            <a class="header__nav-links" asp-controller="Home" asp-action="Articles">Articles</a>
                        </li>
                        <li class="header__nav-li">
                            <a class="header__nav-links"  asp-controller="Home" asp-action="About">About</a>
                        </li>
                    </ul>
                </div>
                <div class="header__icons">

                    @if(ViewData["currentUserName"] != null)
                    {
                        <div class="header__current-user">
                            <a asp-controller="Users" asp-action="PersonalArea" >Hello, @ViewData["currentUserName"]</a>
                        </div>
                        <form method="post">
                            <button class="btn" asp-controller="Home" asp-action="Logout"><img class="header__icons-find" src="/img/logout.svg" width="40" height="40" alt="Logout"></button>
                        </form>
                    }
                    else
                    {
                        <a class="btn" asp-controller="Home" asp-action="Login"><img class="header__icons-user" src="/img/user_login.svg" width="30" height="30" alt="User-icon"></a>
                    }
                </div>
            </header>
            <div class="header__today">
                <h2>@ViewBag.PageInfo </h2>
            </div>
            <div class="container">
                @RenderBody()
            </div>

            <footer class="navbar mt-auto">
               <div class="container-fluid justify-content-center">
                   Copyright© AndyKrause, @(DateTime.Now.Year). All rights reserved
               </div>
            </footer>
        </container>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    </body>
</html>
